<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_revision_details" name="OJM Revision details">
        <t t-set="rev_active" t-value="1"/>
        <t t-call="ojm.ojm_base">
            <t t-call='ojm.navigation'/>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper" style="height:inherit">
                <section class="content">
                    <div class="col-md-12">
                        <div class="card container p-0">
                            <div class="card-header py-0">
                                <div class="row p-0 d-flex flex-row justify-content-between align-items-center">
                                    <div class="p-3 col-md-4 col-sm-12">
                                        <a class="text-primary" t-attf-href="/ojm/{{journal.id}}/in_revision"><span
                                                class="fa fa-chevron-left mr-2"/>back to revisions
                                        </a>
                                    </div>
                                    <div class="d-flex flex-row justify-content-between align-items-center"
                                         style="gap:1em">
                                        <a role="button" class="btn btn-primary others-reviewer-toggler"
                                           href="#others-reviews">
                                            View reviewers comments
                                        </a>
                                        <a role="button" class="btn btn-primary" t-if="submission.state != 'revision_submitted'"
                                           data-toggle="modal" data-target="#modal-review-sub">
                                            Submit revision
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="row m-auto py-3">
                                    <div class="table-responsive">
                                        <table class="table preview_table">
                                            <tr>
                                                <th>
                                                    <label>Journal</label>
                                                </th>
                                                <td>
                                                    <t t-esc="journal.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <label>Journal Section</label>
                                                </th>
                                                <td>
                                                    <t t-esc="submission.section_id.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>
                                                    <label>Article type</label>
                                                </th>
                                                <td>
                                                    <t t-esc="submission.type_id.name"/>
                                                </td>
                                            </tr>
                                        </table>

                                        <h5 class="text-primary">
                                            <strong>Manuscript data</strong>
                                        </h5>

                                        <div class="table-responsive">
                                            <table class="table  preview_table">
                                                <tr>
                                                    <th>
                                                        <label>Title</label>
                                                    </th>
                                                    <td>
                                                        <span t-raw="submission.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <label>Abstract</label>
                                                    </th>
                                                    <td>
                                                        <span t-raw="submission.abstract"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <label>Keywords</label>
                                                    </th>
                                                    <td>
                                                        <t t-foreach="submission.keyword_ids" t-as="keyword">
                                                            <t t-esc="keyword.name"/>,
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>
                                                        <label>Highlights</label>
                                                    </th>
                                                    <td>
                                                        <span t-raw="submission.highlights"/>
                                                    </td>
                                                </tr>
                                            </table>

                                            <h5 class="text-primary">
                                                <strong>Authors</strong>
                                            </h5>

                                            <div class="table-responsive">
                                                <table class="table  preview_table">
                                                    <thead>
                                                        <tr>
                                                            <th>Email</th>
                                                            <th>Title</th>
                                                            <th>First name</th>
                                                            <th>Middle name</th>
                                                            <th>Last name</th>
                                                            <th>Affiliations</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="submission.author_ids" t-as="author">
                                                            <tr>
                                                                <td>
                                                                    <t t-esc="author.email"/>
                                                                </td>
                                                                <td>
                                                                    <span t-field="author.title"/>
                                                                </td>
                                                                <td>
                                                                    <t t-esc="author.fname"/>
                                                                </td>
                                                                <td>
                                                                    <t t-esc="author.mname"/>
                                                                </td>
                                                                <td>
                                                                    <t t-esc="author.lname"/>
                                                                </td>
                                                                <td>
                                                                    <span t-raw="author.get_affiliation_summary(submission.id)"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <tr>
                                                            <th>
                                                                <label>Corresponding author</label>
                                                            </th>
                                                            <td colspan="4">
                                                                <span t-esc="submission.corresponding_author.name"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <!-- t-if="not assignment.decision" -->
                                <a role="button" class="btn btn-primary mr-3 others-reviewer-toggler"
                                   href="#others-reviews">
                                    View reviewers comments
                                </a>
                                <a role="button" class="btn btn-primary mr-3" t-if="submission.state != 'revision_submitted'"
                                   data-toggle="modal" data-target="#modal-review-sub">
                                    Submit revision
                                </a>
                            </div>

                        </div>
                        <div id="others-reviews" class="d-none mt-2">
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex flex-row justify-content-end align-items-center">
                                        <span class="fa fa-close" id="others-reviews-close"/>
                                    </div>
                                </div>
                                <div class="col-md-8 col-sm-12">
                                    <t t-foreach="submission.assignments_ids" t-as="rev">
                                        <div class="card mb-2">
                                            <div class="card-header">
                                                By:
                                                <t t-if="rev.allow_me_to_author">
                                                    <span>rev.reviewer_id.name</span>
                                                </t>
                                                <t t-else="">
                                                    Reviewer
                                                    <t t-esc="rev_index + 1"/>
                                                </t>
                                            </div>
                                            <div class="card-body">
                                                <span>Decision :
                                                    <b>
                                                        <t t-esc="rev.decision"/>
                                                    </b>
                                                </span>
                                                <br/>
                                                <span>Changes :
                                                    <b>
                                                        <t t-esc="rev.comment_severity"/>
                                                    </b>
                                                </span>
                                                <br/>
                                                <div>
                                                    <b>General comment:</b>
                                                    <br/>
                                                    <p>
                                                        <t t-esc="rev.article_id.html_to_text(rev.general_comment)"/>
                                                    </p>
                                                </div>
                                                <div class="marks">
                                                    <b>Marks:</b>
                                                    <table class="table  mtablex">
                                                        <tr>
                                                            <th>
                                                                <label>English flow</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.english_flow"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                <label>Statistic</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.statistic"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                <label>Scientific rigor</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.scientific_rigor"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                <label>Impact and relevance</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.impact_relevance"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                <label>Structure &amp; content</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.structure_and_content"/>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                <label>References</label>
                                                            </th>
                                                            <td>
                                                                <span t-out="rev.references"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                                <a t-if='rev.reviewed_manuscript'
                                                   t-attf-href="/web/content/{{rev.reviewed_manuscript.id}}?download=true"
                                                   class="text-primary">
                                                    Click to download reviewed manuscript
                                                </a>
                                            </div>
                                            <!-- <div class="card-footer">
                                            </div> -->
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <div>
                    <!-- modals -->
                    <div class="modal fade" id="modal-review-sub">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content container">
                                <form t-attf-action="/ojm/{{journal.id}}/revision/submit/{{submission.id}}" method="post"
                                      enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" id="journal_id" name="journal_id" t-att-value="journal.id"/>
                                    <div class="modal-header">
                                        <h4 class="modal-title">Review submission</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true" class="fa fa-close"></span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label for="ufile">Reviewed Document</label>
                                            <input class="form-control" type="file" name="ufile" id="ufile" accept=".doc,.docx,.pdf,.zip"/>
                                        </div>

                                        <div class="form-group">
                                            <label for="acomment">Comment</label>
                                            <textarea id="acomment" name="acomment" class="" rows="3" cols="5"
                                                      required="true">

                                            </textarea>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="reset" class="btn btn-danger mr-3" data-dismiss="modal">
                                            Cancel
                                        </button>
                                        <button class="btn btn-primary" type="submit" id="submit_review">
                                            Submit
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <iframe name="frame" id="hidden_frame"></iframe>
        </t>
    </template>
</odoo>