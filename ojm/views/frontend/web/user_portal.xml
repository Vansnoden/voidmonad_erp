<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_sayans" name="Show Articles" customize_show="True" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <section>
                <div class="card mt-3">
                    <p class="py-3 px-2">
                        Click the link bellow to visit our journals and submit your manuscript to any of them.
                    </p>
                    <a href="/journals" class="btn btn-primary">
                        <i class="fa fa-hand-o-right mr-2"></i>
                        Go to journals
                    </a>
                </div>
            </section>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Submissions</t>
                <t t-set="url" t-value="'/my/submissions'"/>
                <t t-set="placeholder_count" t-value="'submission_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Incomplete Submissions </t>
                <t t-set="url" t-value="'/my/isubmissions'"/>
                <t t-set="placeholder_count" t-value="'isubmission_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Publications </t>
                <t t-set="url" t-value="'/my/publications'"/>
                <t t-set="placeholder_count" t-value="'publication_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_submissions" name="Submissions List">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Submissions</t>
            </t>

            <t t-if="not grouped_articles">
                <div class="alert alert-warning mt8" role="alert">
                    There are no submissions.
                </div>
            </t>
            <t t-if="grouped_articles">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_articles" t-as="articles">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">Ref</th>
                                <th t-if="groupby == 'none'">Title</th>
                                <th t-if="groupby == 'journal'">
                                    <em class="font-weight-normal text-muted"><span t-field="articles[0].sudo().volume_id.journal_id.name"/></em></th>
                                <th t-if="groupby == 'state'">
                                    <em class="font-weight-normal text-muted">in status:</em>
                                    <span class="text-truncate" t-field="articles[0].sudo().state"/></th>
                                <th t-if="groupby != 'journal'">Issue</th>
                                <th t-if="groupby != 'state'">Stage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="articles" t-as="article">
                                <tr>
                                    <td class="text-left">
                                        #<span t-esc="article.code"/>
                                    </td>
                                    <td t-if="not article_url">
                                        <a t-attf-href="/my/submission/{{article.id}}"><t t-esc="article.html_to_text(article.name)"/></a>
                                    </td>
                                    <td t-else="">
                                        <a t-attf-href="/journal/{{slug(article.journal_id)}}/article/{{slug(article)}}"><t t-esc="article.html_to_text(article.name)"/></a>
                                    </td>
                                    <td t-if="groupby != 'journal'">
                                        <span class="mw-100" title="Journal Issue" t-esc="article.volume_id.journal_id.name" />
                                    </td>
                                    <td t-if="groupby != 'state'">
                                        <span class="badge badge-pill badge-info mw-100 text-truncate" title="Stage" t-esc="article.state" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </t>
            </t>
        </t>
    </template>


