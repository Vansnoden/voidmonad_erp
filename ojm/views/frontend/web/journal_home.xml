<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="journal_details" name="Journal Details">
        <t t-call="website.layout">
            <xpath expr="//header/nav" position="inside">
                <!-- custom header here -->
                <div class="journal_menu shadow-sm msticky">
                    <div class="navbar navbar-expand-lg stick_bellow widget js-sticky-widget navbar-light o_colored_level o_cc" id="journal_nav">
                        <div class="container m-auto">
                            <a class="navbar-brand" t-attf-href="/journal/{{slug(journal)}}">
                                <t t-if="journal.logo">
                                    <img class="journal_logo lazy" t-attf-data-src="data:image/*;base64,{{journal.logo}}" alt="logo"/>
                                </t>
                                <t t-else="">
                                    <img class="journal_logo lazy" t-attf-data-src="/ojm/static/src/img/library/sayans_clean.png" alt="logo"/>
                                </t>
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav mr-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" t-attf-href="/journal/{{slug(journal)}}">
                                            <span class="fa fa-home"/>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-capitalize" t-attf-href="/journal/{{slug(journal)}}/current_issue">
                                            Current issue
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-capitalize" t-attf-href="/journal/{{slug(journal)}}/archive">
                                            Archive
                                        </a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-capitalize" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            About
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <t t-if="journal.mission_scope != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item text-capitalize" t-attf-href="/journal/{{slug(journal)}}/about">Mission &amp; scope</a>
                                            </t>
                                            <t t-if="journal.editor_ad_board != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item text-capitalize" t-attf-href="/journal/{{slug(journal)}}/about#eab">Editorial board</a>
                                            </t>
                                            <t t-if="journal.editorial_policies != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item text-capitalize" t-attf-href="/journal/{{slug(journal)}}/about#ep">Editorial policies</a>
                                            </t>
                                            <t t-if="journal.inff_author != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item" t-attf-href="/journal/{{slug(journal)}}/about#ifa">
                                                    <span class="text-capitalize">Information</span> 
                                                    for 
                                                    <span class="text-capitalize">authors</span>
                                                </a>
                                            </t>
                                            <t t-if="journal.inff_reviewer != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item" t-attf-href="/journal/{{slug(journal)}}/about#ifr">
                                                    <span class="text-capitalize">Information</span>
                                                    for 
                                                    <span class="text-capitalize">reviewers</span>
                                                </a>
                                            </t>
                                            <t t-if="journal.journal_metrics != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                                                <a class="dropdown-item text-capitalize" t-attf-href="/journal/{{slug(journal)}}/about#jm">Journal metrics</a>
                                            </t>
                                            <t t-if="journal.journal_contact != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'" class="text-capitalize">
                                                <a class="dropdown-item text-capitalize" t-attf-href="/journal/{{slug(journal)}}/about#contact">Contact us</a>
                                            </t>
                                        </div>
                                    </li>
                                </ul>
                                <a t-attf-href="/ojm/{{journal.id}}/ahome" target="_blank" class="btn btn-primary text-capitalize">
                                    Submit manuscript
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <div class="journal_details">
                <!-- cover -->
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-scroll-background-ratio="1">
                    <t t-if="not journal.cover">
                        <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/ojm.library_image_1'); background-position: 50% 0;"/>
                    </t>
                    <t t-else="">
                        <span class="s_parallax_bg oe_img_bg" t-attf-style="background-image: url(data:image/*;base64,{{journal.cover}}); background-position: 50% 0;"/>
                    </t>
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container s_allow_columns">
                        <h1 style="text-align: center;">
                            <font style="font-size: 62px; font-weight: bold;">
                                <t t-esc="journal.name"/>
                            </font>
                        </h1>
                        <p class="lead" style="text-align: center;">
                            <t t-esc="journal.brief_description"/>
                        </p>
                        <!-- <p style="text-align: center;">
                            <a t-att-href="cta_btn_href" class="btn btn-primary mb-2"><t t-esc="cta_btn_text">Contact us</t></a>
                        </p> -->
                    </div>
