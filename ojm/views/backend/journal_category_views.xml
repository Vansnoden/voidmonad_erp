<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojm_journal_category_view_form" model="ir.ui.view">
        <field name="name">ojm_journal_category.view.form</field>
        <field name="model">ojm.journal.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="sequence"/>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ojm_journal_category_view_tree" model="ir.ui.view">
        <field name="name">ojm_journal_category.view.tree</field>
        <field name="model">ojm.journal.category</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="ojm_journal_category_action" model="ir.actions.act_window">
        <field name="name">Journal categories</field>
        <field name="res_model">ojm.journal.category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
