<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojm_author_declaration_view_form" model="ir.ui.view">
        <field name="name">author declaration</field>
        <field name="model">ojm.author.declaration</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="description"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ojm_author_declaration_view_tree" model="ir.ui.view">
        <field name="name">ojm_author_declaration.view.tree</field>
        <field name="model">ojm.author.declaration</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"></field>
                <field name="create_date"></field>
            </tree>
        </field>
    </record>

    <record id="ojm_author_declaration_view_action" model="ir.actions.act_window">
        <field name="name">Author declarations</field>
        <field name="res_model">ojm.author.declaration</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                Hit the create button to add new author declaration item.
            </p>     
        </field>
    </record>

</odoo>
