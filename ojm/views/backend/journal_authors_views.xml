<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojm_article_author_view_form" model="ir.ui.view">
        <field name="name">ojm_article_author.view.form</field>
        <field name="model">ojm.article.author</field>
        <field name="arch" type="xml">
            <form string="author form">
                <sheet>
                    <group>
                        <group class="col-6">
                            <field name="name" readonly="1"></field>
                            <field name="fname" required="1"></field>
                            <field name="mname"></field>
                            <field name="lname" required="1"></field>
                        </group>
                        <group class="col-6">
                            <field name="title"></field>
                            <field name="email" required="1"></field>
                            <field name="orcid"></field>
                            <field name="sequence" required="1"></field>
                        </group>
                    </group>
                    <!-- <notebook>
                        <page name="affiliations" string="Affiliations">
                            <field name="affiliation_ids"></field>
                        </page>
                    </notebook> -->
                </sheet>
            </form>
        </field>
    </record>

    <record id="ojm_article_author_view_tree" model="ir.ui.view">
        <field name="name">ojm_article_author.view.tree</field>
        <field name="model">ojm.article.author</field>
        <field name="arch" type="xml">
            <tree string="author tree" default_order="name asc">
                <field name="title"></field>
                <field name="name"></field>
                <field name="email"></field>
                <field name="orcid"></field>
                <!-- <field name="affiliation_ids"></field> -->
            </tree>
        </field>
    </record>

    <record id="ojm_article_author_action" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">ojm.article.author</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
