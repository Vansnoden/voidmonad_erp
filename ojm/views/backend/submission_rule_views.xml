<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojm_submission_rule_view_form" model="ir.ui.view">
        <field name="name">ojm_submission_rule.view.form</field>
        <field name="model">ojm.submission.rule</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="code" readonly="1"></field>
                        <field name="name" required="1"></field>
                        <field name="description"></field>
                        <field name="is_published" required="1"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ojm_submission_rule_view_tree" model="ir.ui.view">
        <field name="name">ojm_submission_rule.view.tree</field>
        <field name="model">ojm.submission.rule</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="code"></field>
                <field name="name"></field>
                <field name="description"></field>
                <field name="is_published"></field>
            </tree>
        </field>
    </record>

    <record id="ojm_submission_rule_action" model="ir.actions.act_window">
        <field name="name">Submission Rules</field>
        <field name="res_model">ojm.submission.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
