<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ojm_article_file_type_view_form" model="ir.ui.view">
        <field name="name">ojm_article_file_type.view.form</field>
        <field name="model">ojm.article.file.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="is_published" />   
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="ojm_article_file_type_view_tree" model="ir.ui.view">
        <field name="name">ojm_article_file_type.view.tree</field>
        <field name="model">ojm.article.file.type</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="sequence" />
                <field name="is_published" />
            </tree>
        </field>
    </record>

    <record id="ojm_article_file_type_action" model="ir.actions.act_window">
        <field name="name">Article file types</field>
        <field name="res_model">ojm.article.file.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                Hit the <b>Create</b> button to add new file type for submissions
            </p>
        </field>
    </record>

</odoo>
