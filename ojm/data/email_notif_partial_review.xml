<odoo>

	<data noupdate="0">
		<record id="review_single_end_notif_template" model="mail.template">
            <field name="name">Journal notification</field>
            <field name="model_id" ref="ojm.model_ojm_reviewer_assignment"/>
            <field name="email_from"></field>
            <field name="email_to">{{object.article_id.corresponding_author.email}}</field>
            <field name="subject">Manuscript Review Update - mySayans</field>
            <field name="body_html" type="html">
            	<div>
                    Dear <t t-out="object.article_id.corresponding_author.name"/>,<br/>
                    <p>
                        Your manuscript (<t t-out="object.article_id.code"/>) has received a review in the mySayans system.
                        <br/>Further feedback will be shared once all reviews are in. Please monitor the system for updates.
                    </p>
                    <p style="font-size:0.75rem">
                        Best regards,<br/>
                        Editorial Office,<br/>
                        <t t-out="object.article_id.journal_id.name"/><br/>
                        <a href="www.sayansi.org">www.sayansi.org</a>
                    </p>
            	</div>
            </field>
        </record>
	</data>
</odoo>